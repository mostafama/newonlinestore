extends layout

block content
  h1= title
  h3 Add new product

  form.row.g-3(method='POST' action="")
    .col-md-6
      label.form-label(for='inputname') Name
      input#inputname.form-control(type='text' name='name')
    .col-md-6
      label.form-label(for='inputprice') Price
      input#inputprice.form-control(type='number' placeholder='0.0' step="any" name='price')
    .col-12
      label.form-label(for='inputdescription') Description
      textarea#inputdescription.form-control(rows="3" name='description')
    .col-md-6
      label.form-label(for='inputimage') Image
      input#inputimage.form-control(type='text' placeholder='image.jpg' name='image')    
    .col-md-6
      button.btn.btn-primary.col-12.mt-4(type='submit') Add

  .container
      if errors    
        each error in errors
            p.alert.alert-danger= error

